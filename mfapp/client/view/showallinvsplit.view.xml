<mvc:View controllerName="simple_hello.Controller.showallinvsplit" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns="sap.m">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>mfinvdisp}">
		<semantic:content>
			<IconTabBar id="iconTabBar" select="onQuickFilter" class="sapUiResponsiveContentPadding">
				<content>
					<Table id="invtable" BackgroundDesign="Solid" updateFinished="onUpdateFinished" class="sapUiResponsiveMargin sapUiNoMarginTop" growing="true" growingScrollToLoad="true" noDataText="{worklistView>/tableNoDataText}" width="auto" items="{manageinv_model>/}">
						<headerToolbar>
							<Toolbar>
								<ToolbarSpacer/>
								<SearchField id="searchField" search="onSearch" tooltip="{i18n>worklistSearchTooltip}" width="auto"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column hAlign="Center" vAlign="Center">
								<Text text="{i18n>sname}"/>
							</Column>
							<Column hAlign="Center" vAlign="Center">
								<Text text="{i18n>tamnt}"/>
							</Column>

							<Column hAlign="Center" vAlign="Center">
								<Text text="{i18n>fcnt}"/>
							</Column>

						</columns>
						<items>
							<ColumnListItem press="onPressScheme" type="Navigation" hAlign="Center" vAlign="Center">
								<cells>
									<ObjectIdentifier title="{manageinv_model>sname}"/>
									<ObjectNumber number="{manageinv_model>total}"/>
									<ObjectNumber number="{manageinv_model>count}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</IconTabBar>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>
