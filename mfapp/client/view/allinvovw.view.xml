<mvc:View
    controllerName="simple_hello.Controller.allinvovw"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:invovw="simple_hello.SharedBlocks.invovw"
    displayBlock="true">

 	<Page id ="allinvovw" showNavButton = "true"
       navButtonPress = "onNavBack">
   <content>
     <Table
       selectionChange="handleSelectionChange"
       inset="false"
       id="idProductsTable">

       <headerToolbar>
					<Toolbar
						id="idCrumbToolbar" />
				</headerToolbar>

      <columns>

        <Column
          id="transactionColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>transaction}" />
        </Column>

        <Column
          id="scodeColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>scode}" />
        </Column>

        <Column
          id="snameColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>sname}" />
        </Column>

        <Column
          id="amccodeColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>amccode}" />
        </Column>

        <Column
          id="amcnameColumn"
          hAlign="Center"
          vAlign="Center"
          visible="true">
          <Text text="{i18n>amcname}" />
        </Column>

        <Column
          id="dinvColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>dinv}" />
        </Column>

        <Column
          id="navColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>nav}" />
        </Column>

        <Column
          id="unitsColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>units}" />
        </Column>

        <Column
          id="amountColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>amount}" />
        </Column>

        <Column
          id="invForColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>invFor}" />
        </Column>

        <Column
          id="assetTypeColumn"
          minScreenWidth="Tablet"
          demandPopin="true"
          hAlign="End"
          visible="false">
          <Text text="{i18n>assetType}" />
        </Column>

        <Column
          id="totValColumn"
          hAlign="Center"
          vAlign="Center"
          visible="true"
          width="200px">
          <Text text="{i18n>tamnt}" />
        </Column>

      </columns>

     </Table>
     		</content>
	</Page>
</mvc:View>
