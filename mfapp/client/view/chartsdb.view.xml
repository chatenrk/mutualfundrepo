<View xmlns="sap.m" xmlns:layout="sap.ui.layout" controllerName="simple_hello.Controller.chartsdb">
	<Page showHeader="false">
		<ObjectHeader title="{i18n>chartscoll}"/>
		<HeaderContainer orientation="Horizontal">

			<content>
				<FlexBox items="{dbtiles_model>/ChartsCollection}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{dbtiles_model>title}" press="onTilePress">
						<TileContent>
							<ImageContent src="{dbtiles_model>icon}"/>
						</TileContent>
					</GenericTile>
				</FlexBox>
			</content>

		</HeaderContainer>

	</Page>
</View>
