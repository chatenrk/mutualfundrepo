<View
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	controllerName="simple_hello.Controller.admin">
	<ObjectHeader
		title="Admin Tiles" />
	<HeaderContainer orientation="Horizontal">

	<content>
	<FlexBox items = "{dbtiles_model>/AdminCollection}">
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
				 header="{dbtiles_model>title}"
				 press="onTilePress">
		<TileContent>
			<ImageContent src="{dbtiles_model>icon}" />
		</TileContent>
	</GenericTile>
	</FlexBox>
	</content>

	</HeaderContainer>


	<ObjectHeader
		title="NAV Operation Tiles" />
	<HeaderContainer orientation="Horizontal">

	<content>
	<FlexBox items = "{dbtiles_model>/NAVCollection}">
	<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
				 header="{dbtiles_model>title}"
				 press="onTilePress">
		<TileContent>
			<ImageContent src="{dbtiles_model>icon}" />
		</TileContent>
	</GenericTile>
	</FlexBox>
	</content>

	</HeaderContainer>

</View>
